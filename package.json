{
  "name": "@observerly/server",
  "description": "Pleiades is a Typescript tRPC client and server library for observerly's Prisma end-to-end typesafe API.",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./src/index.ts",
  "author": "Micheal J. Roberts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outdir=dist src/index.ts",
    "dev": "pnpm build && edge-runtime --listen ./dist/index.js --port 3000",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts --fix",
    "lint:staged": "lint-staged",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node ./src/seed.ts",
    "db:flush": "ts-node ./src/flush.ts",
    "studio": "prisma studio",
    "prepare": "pnpm db:generate"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@trpc/client": "^10.11.0",
    "@trpc/server": "^10.11.0",
    "superjson": "^1.12.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@edge-runtime/types": "^2.0.2",
    "@types/node": "^18.7.20",
    "@types/node-fetch": "^2.5.11",
    "dotenv-cli": "^7.0.0",
    "edge-runtime": "^2.0.6",
    "esbuild": "^0.17.7",
    "node-fetch": "^3.3.0",
    "prisma": "^4.10.1",
    "start-server-and-test": "^1.12.0",
    "tsx": "^3.9.0",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
